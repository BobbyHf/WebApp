@model BHIP.Model.AgencyPlanViewModel

@{
    ViewBag.Title = "Create Agency Plan";
}
<script>
    $(document).ready(function () {
        $('.intcomma').masked('###,###,###,##0', { reverse: true, maxlength: false });
        $('.decimalcomma').masked('###,###,###,##0.00', { reverse: true, maxlength: false });

        $("#myForm").submit(function () {
            $('.intcomma').unmask();
            $('.decimalcomma').unmask();
        });
    });

</script>

@using (Html.BeginForm("PlanAdd", "Renewal", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "myForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MemberID)
    <div class="form-group">
        @Html.LabelFor(model => model.PlanName, new { @class = "col-md-4" })
        <div>
            @Html.TextBoxFor(model => model.PlanName, new { @class = "form-control inputfield inputwidth-150" })
            @Html.ValidationMessageFor(model => model.PlanName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PlanType, new { @class = "col-md-4" })
        <div>
            @Html.TextBoxFor(model => model.PlanType, new { @class = "form-control inputfield inputwidth-150" })
            @Html.ValidationMessageFor(model => model.PlanType)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PlanAssetsCurrent, new { @class = "col-md-4" })
        <div>
            @Html.TextBoxFor(model => model.PlanAssetsCurrent, new { @class = "form-control text-right inputfield inputwidth-150 intcomma" })
            @Html.ValidationMessageFor(model => model.PlanAssetsCurrent)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PlanAssetsPrior, new { @class = "col-md-4" })
        <div>
            @Html.TextBoxFor(model => model.PlanAssetsPrior, new { @class = "form-control text-right inputfield inputwidth-150 intcomma" })
            @Html.ValidationMessageFor(model => model.PlanAssetsPrior)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NumberParticipants, new { @class = "col-md-4" })
        <div>
            @Html.TextBoxFor(model => model.NumberParticipants, new { @class = "form-control text-right inputfield inputwidth-150 intcomma" })
            @Html.ValidationMessageFor(model => model.NumberParticipants)
        </div>
    </div>
}

