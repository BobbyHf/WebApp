@model BHIP.Model.EmailProperty

@if (Model.PropertyAddList.Count > 0)
{
    @Html.Raw("Please see the following new property(s) for " + Model.MemberName + ":%0D%0A")
    foreach (BHIP.Model.SendingProperty propertyAdd in Model.PropertyAddList)
    {
        @Html.Raw("Property Name: " + propertyAdd.PropertyName + "%0D%0A")
        @Html.Raw("Address: " + propertyAdd.Address + ", " + propertyAdd.City + ", " + propertyAdd.State + " " + propertyAdd.Zip + "%0D%0A")
        @Html.Raw("Type of Construction: " + propertyAdd.TypeOfConstruction + "%0D%0A")
        @Html.Raw("Cost per square foot: " + propertyAdd.Cost + "%0D%0A")
        @Html.Raw("Square footage: " + propertyAdd.SquareFootage + "%0D%0A")
        @Html.Raw("Own/Lease: " + propertyAdd.OwnLease + "%0D%0A")
        @Html.Raw("Fire/Burglar System: " + propertyAdd.FireBurglar + "%0D%0A")
        @Html.Raw("Date of construction/Remodel: " + propertyAdd.DateContruction + "%0D%0A")
        @Html.Raw("Date added: " + propertyAdd.DateAdded + "%0D%0A")
        @Html.Raw("Building Value: " + propertyAdd.BuildingValue + "%0D%0A")
        @Html.Raw("Content Value: " + propertyAdd.ContentValue + "%0D%0A")
        @Html.Raw("%0D%0A")
    }
    @Html.Raw("%0D%0A%0D%0A")
}

