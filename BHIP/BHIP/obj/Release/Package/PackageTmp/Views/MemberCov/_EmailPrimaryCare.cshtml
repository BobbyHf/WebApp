@model BHIP.Model.EmailPrimaryCare

@if (Model.PrimaryCareAddList.Count > 0)
{
    @Html.Raw("Please see the following new Primary Care Provider(s) for " + Model.MemberName + ":%0D%0A")
    foreach (BHIP.Model.SendingPrimaryCare primarycareAdd in Model.PrimaryCareAddList)
    {
        @Html.Raw("Provider: " + primarycareAdd.FirstName + " " + primarycareAdd.LastName + ", " + primarycareAdd.Title + "%0D%0A")
        @Html.Raw("Date of Hire: " + primarycareAdd.DateOfHire + "%0D%0A")
        @Html.Raw("Board Certified: " + primarycareAdd.BoardCertified + "%0D%0A")
        @Html.Raw("Board Eligible: " + primarycareAdd.BoardEligible + "%0D%0A")
        @Html.Raw("Hours per week: " + primarycareAdd.HoursPerWeek + "%0D%0A")
        @Html.Raw("Contracted or Employed: " + primarycareAdd.EmploymentType + "%0D%0A")
        @Html.Raw("Carries own malpractice: " + primarycareAdd.Malpractice + "%0D%0A")
        @Html.Raw("%0D%0A")
    }
    @Html.Raw("%0D%0A%0D%0A")
}

