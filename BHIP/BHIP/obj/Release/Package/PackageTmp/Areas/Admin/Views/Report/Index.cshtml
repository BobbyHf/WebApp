@model IEnumerable<BHIP.Model.ReportViewModel>

@{
    ViewBag.Title = "Index";
}

<div style="text-align: left; width: 100%; padding: 40px 50px 40px 50px;">
    <h2>Reports</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReportTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReportName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReportTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReportTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReportName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReportTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ReportID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ReportID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ReportID })
                </td>
            </tr>
        }

    </table>
</div>