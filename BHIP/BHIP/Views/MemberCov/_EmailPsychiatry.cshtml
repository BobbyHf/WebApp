        @Html.Raw("Date of Hire: " + psychiatryCOI.DateOfHire + "%0D%0A")
        @Html.Raw("Board Certified: " + psychiatryCOI.BoardCertified + "%0D%0A")
        @Html.Raw("Board Eligible: " + psychiatryCOI.BoardEligible + "%0D%0A")
        @Html.Raw("Hours per week: " + psychiatryCOI.HoursPerWeek + "%0D%0A")
        @Html.Raw("Contracted or Employed: " + psychiatryCOI.EmploymentType + "%0D%0A")
        @Html.Raw("Carries own malpractice: " + psychiatryCOI.Malpractice + "%0D%0A")
        @Html.Raw("%0D%0A")
