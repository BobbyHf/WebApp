@model BHIP.Model.DocumentTypeViewModel

<script src="@Url.Content("~/Scripts/DocumentTypeEdit.js")" type="text/javascript"></script>

@using (Html.BeginForm("SaveAddDocumentType", "Renewal", FormMethod.Post, new { @id = "frmDocument", @class = "form-horizontal", role = "form" }))
{
    <div>Please complete the information in the fields below.</div>
    <div>&nbsp;</div>

        <table style="width: 100%">
            <tr>
                <td class="dialog-left-column">Name:</td>
                <td class="dialog-right-column">
                    @Html.TextBoxFor(model => model.DocType, new { @style = "font-size: medium;" })
                    <br />@Html.ValidationMessageFor(model => model.DocType)
                </td>
            </tr>          
            <tr>
                <td class="dialog-left-column" style="width: 225px; vertical-align: top;">Description:</td>
                <td class="dialog-right-column">
                    @Html.TextAreaFor(model => model.Description, 20, 25, new { @style = "width: 400px; font-size: medium;" })
                    <br />@Html.ValidationMessageFor(model => model.Description)
                </td>
            </tr>
        </table>
}
